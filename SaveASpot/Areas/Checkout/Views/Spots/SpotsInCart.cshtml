@model SaveASpot.ViewModels.Checkout.SpotsCheckoutViewModel
<!-- products table-->
<!-- the script for the toggle all checkboxes from header is located in js/theme.js -->
<div class="table-wrapper products-table section" data-element="cart">
	<div class="row-fluid head">
		<div class="span12">
			<h4>Cart</h4>
		</div>
	</div>

	<div class="row-fluid filter-block">
		<div class="pull-right">
			<a class="btn-flat error new-product" href="javascript:void(0)" data-action='delete-selected'>Remove Selected</a>
		</div>
	</div>

	<div class="row-fluid">
		<table class="table table-hover">
			<thead>
				<tr>
					<th class="span3">
						<input type="checkbox">
						Spot</th>
					<th class="span3">Phase</th>
					<th class="span3">Price</th>
					<th class="span3"></th>
				</tr>
			</thead>
			<tbody>
				@{
					var spotIdex = 1;
				}
				@foreach (var spot in Model.Spots)
		{
					<tr data-identity="@spot.Identity.ToString()" class="@(spotIdex == 1 ? "first" : string.Empty)">
						<td>
							<input type="checkbox">
							<i class="icon-map-marker"></i>Spot @spotIdex
						</td>
						<td>
							<a href="javascript:void(0)">Phase 1</a>
						</td>
						<td class="description">
							<span class="time"><i class="icon-dollar"></i>@spot.PhaseElement.SpotPrice</span>
						</td>
						<td>
							<ul class="actions">
								<li class="last" data-action="delete"><a href="#">Delete</a></li>
							</ul>
						</td>
					</tr>

			spotIdex++;
		}
			</tbody>
			<tfoot>
				<!-- row -->
				<tr>
					<th></th>
					<th></th>
					<th class="description">
						<span class="time"><i class="icon-dollar"></i>@Model.Price</span>
					</th>
					<th></th>
				</tr>
			</tfoot>
		</table>
	</div>
	<!-- end products table -->
</div>

