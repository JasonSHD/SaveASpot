@using SaveASpot.Controllers
@model SaveASpot.ViewModels.PhasesAndParcels.SpotsViewModel
@{
	ViewBag.Title = "Index";
}

<input id="@SiteConstants.ParcelsAndSpotsTabSpecificReadyAlias" value="@SiteConstants.SpotsControllerAlias" type="hidden" />

<table class="table table-striped">
	<thead>
		<tr>
			<th>Area</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var spotViewModel in Model.Spots)
	{
			<tr>
				<td>@spotViewModel.Area</td>
				<td>
					<button class="btn btn-danger" data-spot-delete-identity="@spotViewModel.Identity.ToString()" data-spot-delete-name="@spotViewModel.Area">Delete</button></td>
			</tr>
	}
	</tbody>
</table>
