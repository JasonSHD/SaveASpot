@{
    ViewBag.Title = "Save A Spot Map";
}

@section styles {    
    <link rel="stylesheet" type="text/css" href="/Content/Map.css" />
}

@section SideBar {
    <ul id="dashboard-menu"></ul>

    <p style="text-align: center; padding: 1em;">Spot Count: <span id="spotCount"></span></p>
}

@section navigation {
    <li class="notification-dropdown hidden-phone">
        <a href="#" class="trigger">
            <i class="icon-shopping-cart"></i>
            <span class="notification-count count">0</span>
        </a>
        <div class="pop-dialog">
            <div class="pointer right">
                <div class="arrow"></div>
                <div class="arrow_border"></div>
            </div>
            <div class="body">
                <a href="#" class="close-icon"><i class="icon-remove-sign"></i></a>
                <div class="notifications">
                    <h3>Your Shopping Cart</h3>
                    <div id="cart">
                        <a href="#" class="item">
                            <i class="icon-map-marker"></i> Spot 1
                            <span class="time"><i class="icon-dollar"></i> 30.00</span>
                        </a>
                        <a href="#" class="item">
                            <i class="icon-map-marker"></i> Spot 2
                            <span class="time"><i class="icon-dollar"></i> 30.00</span>
                        </a>
                        <a href="#" class="item">
                            <i class="icon-map-marker"></i> Spot 3
                            <span class="time"><i class="icon-dollar"></i> 30.00</span>
                        </a>
                        <a href="#" class="item">
                            <i class="icon-map-marker"></i> Spot 4
                            <span class="time"><i class="icon-dollar"></i> 30.00</span>
                        </a>
                    </div>
                    <div class="footer">
                        @using(Html.BeginForm("Checkout", "Home", FormMethod.Post)) {
                            <input type="hidden" id="id" name="id" value="@ViewBag.sponsorID" />
                            <button type="submit" class="logout">Check Out</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </li>
}
        
<div id="map_canvas"></div>
<div id="map_loading" class="hide">
    <div class="progress progress-striped active">
        <div class="bar" style="width: 40%;"></div>
    </div>
</div>

<script id="phaseItem" type="text/html"><li>
    <a href="#{{ID}}" class="phase">                    
        <i class="icon-map-marker"></i>
        <span>{{PhaseName}}</span>
    </a>
</li> 
</script>

<script id="cartItem" type="text/html"><a href="#" id="{{ID}}" class="item">
    <i class="icon-map-marker"></i> Spot {{Index}}
    <span class="time"><i class="icon-dollar"></i> {{Price}}</span>
</a>
</script>

<script id="phaseAllItem" type="text/html"><li class="active">
    <a href="#all" class="phase-all">
        <i class="icon-map-marker"></i>
        <span>Show All</span>
    </a>
</li>
</script>

@section footer {
    <script src="/Scripts/mustache.js" type="text/javascript"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCw9fP5c4kc5MiZBvUzLiMc8tY00BU4_i4&sensor=true" type="text/javascript"></script>
    <script src="/Scripts/js/map.js" type="text/javascript"></script>
    <script src="/Scripts/js/Phase.js" type="text/javascript"></script>
    <script src="/Scripts/js/Spot.js" type="text/javascript"></script>
    <script src="/Scripts/js/SponsorSpot.js" type="text/javascript"></script>
}
