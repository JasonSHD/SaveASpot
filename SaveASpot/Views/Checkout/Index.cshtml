@model SaveASpot.ViewModels.Checkout.CheckoutViewModel
@{
	Layout = null;
}

<div class="container-fluid">
	<div id="pad-wrapper">

		<!-- products table-->
		<!-- the script for the toggle all checkboxes from header is located in js/theme.js -->
		<div class="table-wrapper products-table section">
			<div class="row-fluid head">
				<div class="span12">
					<h4>Cart</h4>
				</div>
			</div>

			<div class="row-fluid filter-block">
				<div class="pull-right">
					<a class="btn-flat error new-product">Remove Selected</a>
				</div>
			</div>

			<div class="row-fluid">
				<table class="table table-hover">
					<thead>
						<tr>
							<th class="span3">
								<input type="checkbox">
								Spot</th>
							<th class="span3">Phase</th>
							<th class="span3">Price</th>
							<th class="span3"></th>
						</tr>
					</thead>
					<tbody>
						@{
							var spotIdex = 1;
						}
						@foreach (var spot in Model.Spots)
			{
							<tr data-identity="@spot.Identity.ToString()" class="@(spotIdex == 1 ? "first" : string.Empty)">
								<td>
									<input type="checkbox">
									<i class="icon-map-marker"></i>Spot @spotIdex
								</td>
								<td>
									<a href="#">Phase 1</a>
								</td>
								<td class="description">
									<span class="time"><i class="icon-dollar"></i>30.00</span>
								</td>
								<td>
									<ul class="actions">
										<li class="last"><a href="#">Delete</a></li>
									</ul>
								</td>
							</tr>

				spotIdex++;
			}
					</tbody>
					<tfoot>
						<!-- row -->
						<tr>
							<th></th>
							<th></th>
							<th class="description">
								<span class="time"><i class="icon-dollar"></i>@Model.Price</span>
							</th>
							<th></th>
						</tr>
					</tfoot>
				</table>
			</div>
			<!-- end products table -->
		</div>
	</div>

	<div id="pad-wrapper-cartinfo" class="form-page">
		<div class="row-fluid form-wrapper">
			<!-- left column -->
			<div class="span12 column">

				<div class="head">
					<h4>Credit Card Information</h4>
				</div>
				<p>&nbsp;</p>
				<form>
					<div class="field-box">
						<label>Name on Card</label>
						<input class="span8" type="text" />
					</div>
					<div class="field-box">
						<label>Card Number</label>
						<input class="span8" type="text" />
					</div>
					<div class="field-box">
						<label>Expiration (MM/YYYY)</label>
						<input class="span3" type="text" />
						/
						<input class="span3" type="text" />
					</div>
					<div class="field-box">
						<label>Cvc</label>
						<input class="span8" type="text" />
					</div>
					<div class="field-box">
						<label>Postal Code</label>
						<input class="span8" type="text" placeholder="Only required if you live in the U.S.A." />
					</div>
					<p>Please review the <a href="#">terms of service</a>, and <a href="#">privacy policy</a>.</p>
				</form>

				<div class="head">
					<h4>User Information</h4>
				</div>
				<p>&nbsp;</p>
				<form>
					<div class="field-box">
						<label>User name</label>
						<input class="span8" type="text" />
					</div>
					<div class="field-box">
						<label>Email address</label>
						<input class="span8" type="text" />
					</div>
					<div class="field-box">
						<label>Password</label>
						<input class="span8" type="text" />
					</div>
					<div class="field-box">
						<label>Confirm Password</label>
						<input class="span8" type="text" />
					</div>

					<a class="btn-flat" href="success.html">Order</a>
				</form>
			</div>
		</div>
	</div>
</div>
