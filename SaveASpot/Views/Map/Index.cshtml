@model SaveASpot.ViewModels.MapViewModel
@using SaveASpot.Controllers
@{
	ViewBag.Title = "Index";
	Layout = null;
}
<input id="@SiteConstants.MainMenuTabSpecificReadyAlias" value="@SiteConstants.MapControllerAlias" type="hidden" />
<input type="hidden" data-gmap-api-key="@Model.GoogleMapKey" />
<div id="sidebar-nav">
	<ul id="dashboard-menu">
		@foreach (var phase in Model.Phases)
	{
			<li data-identity="@phase.Identity.ToString()">
				<a href="javascript:void(0)">
					<i class="icon-map-marker"></i>
					<span>@phase.Name</span>
				</a>
			</li>
	}
	</ul>
</div>
<div class="content">
	<style type="text/css">
		#map-container
		{
			width: 100%;
			height: 100%;
		}

		#map-canvas
		{
			width: 94%;
			padding: 17%;
		}
	</style>
	<input type="hidden" id="showCustomerBookingPanel" value="@Model.ShowCustomerBookingPanel"/>
	<div id="map-container" class="container">
		<div id="map-canvas" class="mini-layout-body">
		</div>
	</div>

	@if (Model.ShowCustomerBookingPanel)
 {
	 Html.RenderPartial("CustomerSpots", Model);
	 
		<div class="sponsor-details">
			<span class="company-name"></span>
			<span class="sponsor-sentence"></span>
			<span class="sponsor-url"></span>
			<img class="sponsor-logo" src="" />
		</div>
 }
 else
 {
	 Html.RenderPartial("CorpoprateSponsors", Model);
 }
</div>


