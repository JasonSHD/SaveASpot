﻿@model SaveASpot.ViewModels.MapViewModel
@using SaveASpot.Controllers
@{
	ViewBag.Title = "Index";
	Layout = null;
}
<input id="@SiteConstants.MainMenuTabSpecificReadyAlias" value="@SiteConstants.MapControllerAlias" type="hidden" />

<input type="hidden" data-gmap-api-key="@Model.GoogleMapKey" />
<div id="sidebar-nav">
	<ul id="dashboard-menu">
		@foreach (var phase in Model.Phases)
	{
			<li data-identity="@phase.Identity.ToString()">
				<a href="javascript:void(0)">
					<i class="icon-map-marker"></i>
					<span>@phase.Name</span>
				</a>
			</li>
	}
	</ul>
</div>
<div class="content">

	<div data-tabelement="map">
		<style type="text/css">
			#map-container
			{
				width: 100%;
				height: 100%;
			}

			#map-canvas
			{
				width: 94%;
				padding: 17%;
			}
		</style>
		<input type="hidden" id="showCustomerBookingPanel" value="@Model.ShowCustomerBookingPanel"/>
		<div data-gmap-message-container="" style="height: 40px;">
		</div>
		<div id="map-container" class="container">
			<div id="map-canvas" class="mini-layout-body">
			</div>
		</div>

		@if (Model.ShowCustomerBookingPanel)
	{
		Html.RenderPartial("CustomerSpots", Model);
	}
	else
	{
		Html.RenderPartial("CorpoprateSponsors", Model);
	}
	</div>
	<div data-tabelement="checkout" style="display: none;" id="pad-wrapper">
		<div data-checkout-content="">
		</div>
		<button data-order="" class="btn-flat">Order</button>
	</div>

	<div data-tabelement="thanks" style="display: none;" class="table-wrapper products-table section">
		<div class="row-fluid head">
			<div class="span12">
				<h4>Cart</h4>
			</div>
		</div>

		<p>
			Thank you for contributing to Save a Spot.  Your contribution will be processed once we receive enough contributors for a phase.
		</p>
	</div>
</div>

