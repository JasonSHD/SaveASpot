@{
    ViewBag.Title = "Save A Spot Map";
}

@section styles {    
    <link rel="stylesheet" type="text/css" href="/Content/Map.css" />
}

@section SideBar {
    <form class="project-cart" style="margin: 5px;">
        <label>Select Sponsor</label>
        <select class="sponsor-list input-block-level" placeholder="Select Sponsor">
          <option value="">No Preference</option>
        </select>
        <label>Quantity</label>
        <select class="qty input-block-level" placeholder="Quantity">
          <option value="1">1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>
          <option>6</option>
          <option>7</option>
          <option>8</option>
          <option>9</option>
          <option>10</option>
        </select>
        <button class="btn btn-info project-btn" type="button">Buy Spots</button>
    </form>
    <!--<ul id="dashboard-menu"></ul>-->
    <hr />
    <ul id="dashboard-sponsors"></ul>
    <div id="spotCount" class="alert alert-error hide">234</div>
}

@section navigation {
    <li class="notification-dropdown hidden-phone">
        <a href="#" class="trigger">
            <i class="icon-shopping-cart"></i>
            <span class="notification-count count">0</span>
        </a>
        <div class="pop-dialog">
            <div class="pointer right">
                <div class="arrow"></div>
                <div class="arrow_border"></div>
            </div>
            <div class="body">
                <a href="#" class="close-icon"><i class="icon-remove-sign"></i></a>
                <div class="notifications">
                    <h3>Your Shopping Cart</h3>
                    <div id="cart">
                    </div>
                    <div class="footer">
                        @using (Html.BeginForm("Index", "Checkout", FormMethod.Post))
                        {
                            <input type="hidden" id="id" name="id" value="@ViewBag.sponsorID" />
                            <button type="submit" class="btn btn-info input-block-level">Check Out</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </li>
}
        
<div id="map_canvas"></div>
<div id="map_loading" class="hide">
    <div class="progress progress-striped active">
        <div class="bar" style="width: 40%;"></div>
    </div>
</div>

<script id="phaseItem" type="text/html"><li>
    <a href="#{{ID}}" class="phase">                    
        <i class="icon-map-marker"></i>
        <span>{{PhaseName}}</span>
    </a>
</li> 
</script>

<script id="cartItem" type="text/html"><a href="#" id="{{ID}}" class="item">
    <i class="icon-map-marker"></i> Spot {{Index}}
    <span class="time"><i class="icon-dollar"></i> {{Price}}</span>
</a>
</script>

<script id="phaseAllItem" type="text/html"><li class="active">
    <a href="#all" class="phase-all">
        <i class="icon-map-marker"></i>
        <span>Show Phases</span>
    </a>
</li>
</script>

<script id="sponsorItem" type="text/html"><li id='{{SponsorIDToString}}'>
    <img src='{{ImageUrl}}' alt'{{Name}}' />
</li></script>

@section footer {
    <script type="text/javascript">
        var SaveASpot = SaveASpot || {};

        $(function () {
            var sponsorID = $("#id").val();
            SaveASpot.IsSponsor = !(sponsorID == null || sponsorID == "");
        });
    </script>
    <script src="/Scripts/mustache.js" type="text/javascript"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCw9fP5c4kc5MiZBvUzLiMc8tY00BU4_i4&sensor=true" type="text/javascript"></script>
    <script src="/Scripts/js/map.js" type="text/javascript"></script>
    <script src="/Scripts/js/Phase.js" type="text/javascript"></script>
    <script src="/Scripts/js/Spot.js" type="text/javascript"></script>
    <script src="/Scripts/js/SponsorSpot.js" type="text/javascript"></script>
}
